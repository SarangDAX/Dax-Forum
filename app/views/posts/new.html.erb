<%= form_with(model: @post, local: true) do |f| %>

    <p>
        <%= f.label :Title %><br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :Content %><br>
        <%= f.text_area :content %>
    </p>

    <p>
        <%= f.label :Channel %><br>
        <%= f.select :channel_id, @channels.map { |c| [c.channel_name, c.id]}, { prompt: 'Select Channel' } %>
        
    </p>

    <p>
        <%= f.submit %> 
    </p>

<% end %>