<h1> DISCUSSIONS LISTING PAGE : </h1>

<table>
    <thead>
        <tr>
            <th> TOPIC NAME </th>
            <th> DESCRIPTION </th>
            <th> ACTIONS </th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td> <%= post.title %> </td>
                <td> <%= post.content %> </td>
                <td> <button> <%= link_to 'Show', post_path(post) %> </button> </td>
                <td> <button> <%= link_to 'Edit', edit_post_path(post) %> </button>&ensp;&ensp; <br> </td>
                <td> <button> <%= link_to 'Delete', post_path(post), method: :delete%> </button> </td>
            </tr>
        <% end %>
    </tbody>            
</table>

